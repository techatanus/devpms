<script>
    $(document).ready(function () {
        // Event listener for input in the item search field
        $('#itemSearch').on('input', function () {
            const searchTerm = $(this).val().trim(); // Get the trimmed value of the search term

            if (searchTerm.length > 0) {
                $.ajax({
                    url: '/search-products', // Backend route for searching products
                    method: 'GET',
                    data: { term: searchTerm }, // Sending the search term as a query parameter
                    success: function (data) {

                        $('#suggestions').empty(); // Clear previous suggestions

                        // Loop through the data and append each product as a clickable suggestion
                        data.forEach(product => {
                            $('#suggestions').append(`
                                <a href="#" class="list-group-item list-group-item-action" data-id="${product.p_id}" data-name="${product.p_name}" data-bp="${product.p_bp}" data-sp="${product.p_sp}" data-wp="${product.p_wp}">
                                    ${product.p_name} - Price: ${product.p_sp}
                                </a>
                            `);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', status, error); // Log any AJAX errors to the console
                    }
                });
            } else {
                $('#suggestions').empty(); // Clear suggestions if the search term is empty
            }
        });

        // Event listener for clicking a suggestion
        $('#suggestions').on('click', 'a', function (e) {
            e.preventDefault(); // Prevent default link behavior
            const pid = $(this).data('id');
            const name = $(this).data('name'); // Get product name from data attribute
            const sp = $(this).data('sp'); // Get selling price from data attribute
            const bp = $(this).data('bp'); // Get buying price from data attribute
            const wp = $(this).data('wp'); // Get wholesale price from data attribute

            // Append the selected product to the cart
            $('#cartContents').append(`
                <tr>
                    <td><button class="btn btn-danger btn-sm">Delete</button></td>
                      
                    <td>${pid}</td>
                    <td>${name}</td>
                    <td id="one">${sp}</td>
                    <td><input  id="qu" type="number" class="form-control" value="1" min="1"></td>
                    <td>
                        <select class="form-control" id ="disc">
                            <option value="0">x0</option>
                            <option value="10">x10</option>
                            <option value="20">x20</option>
                        </select>
                    </td>
                    
                    <td id="total">ksh ${sp} </td>
                    <td><button class="btn btn-primary btn-sm">Update</button></td>
                </tr>
            `);

            $('#itemSearch').val(''); // Clear the search input field
            $('#suggestions').empty(); // Clear the suggestions list
        });
    });
</script>

  
